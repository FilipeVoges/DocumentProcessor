{% extends "app.twig" %}

{% block content %}
    <hr>
    <div class="row col-12">
        <form action="download" method="POST" class="col-12">
            <input type="hidden" name="filename" value="{{ fileName }}">
            {% for fileVar in fileVars %}
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">{{ fileVar }}:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="{{ fileVar }}" name="{{ fileVar }}"
                               placeholder="{{ fileVar }}" required>
                    </div>
                </div>
            {% endfor %}

            <div class="row col-12">
                <div class="col-10">
                    <button type="submit" class="btn btn-sm btn-outline-success">Processar</button>
                </div>
                <div class="col-2">
                    <a href="/" class="float-right">
                        <button type="button" class="btn btn-sm btn-outline-dark">Voltar</button>
                    </a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}